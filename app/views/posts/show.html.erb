<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <%= @post.title %>
              <div class="pull-right"><small><%= @post.created_at.strftime('%m/%d/%y') %></small></div>
            </h3>
          </div>
          <div class="panel-body">
            <%= @post.body %>

            <br>
            <%= link_to 'Add a Comment', '#', :id => 'new-comment' if current_user %>
            <form id="comment-form">
              <input id="post-id" type="hidden" name="post-id" value="<%= @post.id %>">
              <textarea id="comment-body" class="form-control" name="comment-body" cols="5" rows="5"></textarea>
              <button type="submit" class="btn btn-primary">Add Comment</button>
            </form>
            <div class="row">
              <div class="col-md-8">
                <div class="row">
                  <div id="comment-box" class="col-md-12">
                    <% if @comments.count > 0 %>
                      <% @comments.each do |comment| %>
                        <div class="well">
                          <small><%= comment.user.username %> said on <%= comment.created_at.strftime('%m/%d/%y') %></small>
                          <br>
                          <%= comment.body %>
                        </div>
                      <% end %>
                      <%= will_paginate @comments %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
</div>
