<div class="row">
  <div id="post-box" class="col-md-12">
    <% @posts.each do |post| %>
      <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-8">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">
                <%= link_to post.title, post %>
                <div class="pull-right"><small><%= post.created_at.strftime('%m/%d/%y') %></small></div>
              </h3>
            </div>

            <div class="panel-body">
              <%= post.body %>

              <% if post.comments.count > 0 %>
                <br>
                <div class="pull-right">
                  <small>
                    <span class="badge"><%= post.comments.count %></span> comment<%= 's' if post.comments.count > 1 %>
                  </small>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="col-md-2"></div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= will_paginate @posts %>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
</div>
