<div class="modal fade" id="new-post" role="dialog" aria-labelledby="new-post">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">x</button>
        <h2>New Post</h2>
      </div>

      <div class="modal-body">
        <form id="post-form">
          <div class="form-group">
            <label for="post-title">Title</label>
            <input id="post-title" type="text" class="form-control">
          </div>

          <div class="form-group">
            <label for="post-body">Body</label>
            <textarea id="post-body" class="form-control" rows="5"></textarea>
          </div>

          <input type="submit" name="commit" value="Post" class="btn btn-small btn-success">
        </form>
      </div>
    </div>
  </div>
</div>
