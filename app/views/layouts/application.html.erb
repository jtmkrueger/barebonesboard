<!DOCTYPE html>
<html>
<head>
  <title>Barebonesboard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render "shared/login_modal" %>
<%= render "shared/signup_modal" %>
<%= render "shared/new_post" %>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to 'BarebonesBoard', root_url, :class => 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="barebones-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to 'Home', root_url %></li>
        <% if user_signed_in? %>
          <li><%= link_to 'Create New Post', '#', 'data-toggle' => 'modal', 'data-target' => '#new-post' %></li>
        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><p class="navbar-text">Hello, <%= current_user.username %></p></li>
          <li><%= link_to 'Logout', destroy_user_session_path %></li>
        <% else %>
          <li><%= link_to 'Login', '#', 'data-toggle' => 'modal', 'data-target' => '#login' %></li>
          <li><p class="navbar-text">or</p></li>
          <li><%= link_to 'Sign up', '#', 'data-toggle' => 'modal', 'data-target' => '#create-account' %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>

<%= yield %>

<%= javascript_include_tag 'application' %>

<script id="comment-template" type="text/x-handlebars-template">
  <div class="well">
    <small>You said</small>
    <br>
    {{body}}
  </div>
</script>

<script id="post-template" type="text/x-handlebars-template">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a href="/posts/{{id}}">{{title}}</a>
            <div class="pull-right"><small>now</small></div>
          </h3>
        </div>
        <div class="panel-body">
          {{body}}
        </div>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</script>
</body>
</html>
